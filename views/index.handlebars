<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">



  <div class="burgerlogo">
    <img src="/assets/img/burger.svg">
  </div>
<div class="hungry">Hungry? </div>
  <div class="row pt-5">
    <div class="col-md-6">
      <h2>EAT BURGER!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>{{burger_name}} <button type="submit" class="btn devourThis btn-warning" data-id={{id}}>Devour it!</button></li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-md-6">
      <h2>DEVOURED!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li data-id={{id}}>{{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="name">Burger Name:</label>
      <input type="text" id="name" name="name">
    </div>

    <button class="btn btn-warning" type="submit" id="submit">Add Burger</button>
  </form>
</div>